<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.appbusters.robinkamboj.udacitysyllabuspart1.view.activities.views.fragments.OneFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4sp"
            android:layout_margin="7sp"
            android:clickable="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:orientation="vertical">

                <TextView
                    style="@style/TextViewParent"
                    android:id="@+id/heading"
                    android:clickable="true"
                    android:textSize="16sp"
                    android:text="@string/enter_list_heading"/>

                <TextView
                    style="@style/TextViewParent"
                    android:id="@+id/description"
                    android:clickable="true"
                    android:textSize="12sp"
                    android:text="@string/enter_description_here"/>

                <Button
                    style="@style/TextViewParent.Button"
                    android:id="@+id/add"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:text="@string/add_item_to_list"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/alternate">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/no_data_added"
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:fontFamily="sans-serif-smallcaps"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recycler">

            </android.support.v7.widget.RecyclerView>

        </FrameLayout>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
